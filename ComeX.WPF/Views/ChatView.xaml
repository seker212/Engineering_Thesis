<UserControl x:Class="ComeX.WPF.Views.ChatView"
             x:Name="ChatViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:ComeX.WPF.UserControls"
             xmlns:local="clr-namespace:ComeX.WPF.Views"
             mc:Ignorable="d" 
             MinHeight="450" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="MainGrid"
          Height="{Binding ActualHeight, ElementName=ChatViewUserControl}"
          Width="{Binding ActualWidth, ElementName=ChatViewUserControl}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition Width="160"></ColumnDefinition>
                <ColumnDefinition MinWidth="360" Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid x:Name="ServersUserGrid" Width="80" Background="{StaticResource DarkBlue3}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="150"></RowDefinition>
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" x:Name="ServersWrapP" ItemWidth="70" Orientation="Vertical" VerticalAlignment="Top" Width="70">
                    <WrapPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RoundButtonStyle}">
                            <Setter Property="Margin" Value="0,5,0,5" />
                            <Setter Property="Width" Value="60" />
                            <Setter Property="Height" Value="60" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Stretch" />
                        </Style>

                    </WrapPanel.Resources>
                <Button x:Name="AddServer"
                    Content="+">

                </Button>
                </WrapPanel>

                <WrapPanel Grid.Row="1" x:Name="UserWrapP" Orientation="Vertical" Margin="5,0,5,10" ItemWidth="70" Width="70">
                    <WrapPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RoundButtonStyle}">
                            <Setter Property="Margin" Value="0,5,0,5" />
                            <Setter Property="Width" Value="60" />
                            <Setter Property="Height" Value="60" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Stretch" />

                        </Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Background" Value="{x:Null}" />
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                            <Setter Property="Foreground" Value="{StaticResource LightBlue1}" />
                            <Setter Property="FontSize" Value="14" />
                        </Style>
                    </WrapPanel.Resources>

                    <Button x:Name="UserAvatar" />

                <Button x:Name="Settings"
                        Width="60"
                        Height="60"
                        Command="{Binding OpenSettingsCommand}">
                </Button>
                </WrapPanel>
            </Grid>

            <WrapPanel Grid.Column="1" x:Name="RoomsWrapP"
                   Width="160"
                   Background="{StaticResource DarkBlue1}"
                   Orientation="Vertical">
            <ListView Grid.Row="0" Grid.ColumnSpan="2" x:Name="RoomsListView"
                          Margin="5"
                          ItemsSource="{Binding RoomsNames}"
                          Background="{x:Null}"
                          BorderBrush="{x:Null}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <uc:RoomUserControl/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </WrapPanel>

            <Grid Grid.Column="2" x:Name="ContentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="200" Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="{StaticResource DarkBlue2}"/>
                <WrapPanel Grid.Column="0" Grid.Row="0" x:Name="RoomTitle"
                       MinWidth="30"
                       Height="40"
                       Orientation="Horizontal"
                       Background="{StaticResource DarkBlue2}">

                <Border BorderBrush="{x:Null}" Height="40">
                    <TextBlock x:Name="SelectedRoomTitle" Style="{StaticResource DefaultHeaderTextBlockStyle}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap"
                         Width="120"
                         Margin="10,5,5,5"
                         Text="{Binding CurrentRoomName}"/>
                </Border>
            </WrapPanel>
                <WrapPanel Grid.Column="1" Grid.Row="0" x:Name="UsersOnline" Background="{StaticResource DarkBlue2}">
                    <WrapPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RoundButtonStyle}">
                            <Setter Property="Margin" Value="0,5,0,5" />
                            <Setter Property="Width" Value="40" />
                            <Setter Property="Height" Value="40" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </WrapPanel.Resources>
                    <Button Content="+" />
                </WrapPanel>
            <Grid Grid.Column="0" Grid.Row="1" x:Name="RoomMessagesGrid"
                  Background="{StaticResource DarkBlue3}">
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="110"></RowDefinition>
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0" x:Name="MessagesListView"
                          Margin="5"
                          ItemsSource="{Binding CurrentRoomMessages}"
                          Background="{StaticResource DarkBlue3}"
                          BorderBrush="{x:Null}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel x:Name="MessagesWrapP" Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="0" x:Name="Message" Margin="2">
                                <Grid.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Grid.Column" Value="1"/>
                                        <Setter Property="Grid.Row" Value="1"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Foreground" Value="{StaticResource LightBlue1}"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                        <RowDefinition x:Name="AuthorDateRow" Height="20"></RowDefinition>
                                        <RowDefinition x:Name="ContentRow"></RowDefinition>
                                </Grid.RowDefinitions>

                                    <WrapPanel x:Name="MessageNickDateWrapP" Grid.Row="0"
                                               Orientation="Horizontal" 
                                               VerticalAlignment="Center">
                                        <WrapPanel.Resources>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Margin" Value="0,0,10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                        </WrapPanel.Resources>
                                        <TextBlock x:Name="AuthorText"
                                                   FontSize="16"
                                                   Foreground="{StaticResource LightBlue1}"
                                                   Text="{Binding MessageAuthor}"/>
                                        <TextBlock x:Name="DateText"                                                
                                                   FontSize="12"
                                                   Foreground="{StaticResource LightBlue2}"
                                                   Text="{Binding MessageDateTime}"/>
                                    </WrapPanel>
                                    <Grid x:Name="ContentGrid" Grid.Row="1" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                        <TextBlock x:Name="ContentText" Grid.Row="0"
                                                   Margin="0,0,0,5"
                                            Text="{Binding MessageContent}">
                                        </TextBlock>

                                    <Border x:Name="BorderAnswerListView" Grid.Row="1" Style="{StaticResource DefaultBorderStyle}" Visibility="{Binding SurveyAnswersVisibility}">
                                    <ListView x:Name="AnswersListView"
                                              BorderThickness="0"
                                              Background="{StaticResource DarkBlue2}"
                                              Visibility="{Binding SurveyAnswersVisibility}"
                                              ItemsSource="{Binding SurveyAnswersContent}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ContentPresenter />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid x:Name="SurveyAnswer">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition x:Name="AnswerButtonCol" Width="30"></ColumnDefinition>
                                                        <ColumnDefinition x:Name="AnswerTextCol" Width="200"></ColumnDefinition>
                                                        <ColumnDefinition x:Name="AnswerVotesCounterCol" Width="50"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.Resources>
                                                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultTextBlockStyle}">
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="Margin" Value="5,5,5,5"/>
                                                            <Setter Property="Foreground" Value="{StaticResource LightBlue1}"/>
                                                        </Style>
                                                    </Grid.Resources>
                                                    <Button x:Name="AnswerButton" Grid.Column="0" Style="{StaticResource RoundButtonStyle}"
                                                            Width="25"
                                                            Height="25"
                                                            VerticalAlignment="Top"/>
                                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <TextBlock x:Name="AnswerText"
                                                               TextWrapping="Wrap"
                                                               Text="{Binding}"/>
                                                        </StackPanel>
                                                        <TextBlock x:Name="AnswerVotesCounter" Grid.Column="2"
                                                               HorizontalAlignment="Right" Text="0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    </Border>
                                </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                <Grid Grid.Row="1" x:Name="TypeGrid" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="{StaticResource DarkBlue2}"/>
                    <Rectangle x:Name="Placeholder" Grid.Row="0"
                               Height="23"
                               Width="141"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                        <!--<Rectangle.Fill>
                                <ImageBrush ImageSource="Resources/Images/Placeholders/messagePlaceholder.jpg"/>
                            </Rectangle.Fill>-->
                    </Rectangle>
                    <StackPanel
                        Orientation="Vertical">
                        <TextBox Style="{StaticResource DefaultTextBoxStyle}" Grid.Row="0" x:Name="TypeTextBox"
                             FontSize="16"
                             BorderThickness="0"
                             Foreground ="{StaticResource LightBlue1}"
                             TextWrapping="Wrap"
                             FontStyle="Normal"
                             CaretBrush="{StaticResource LightBlue1}"
                             Text="{Binding Content}"/>
                    </StackPanel>

                    <WrapPanel Grid.Row="1" x:Name="TypeToolsWrapPanel" Orientation="Horizontal" FlowDirection="RightToLeft">
                        <WrapPanel.Resources>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource RoundButtonStyle}">
                                <Setter Property="Margin" Value="5,5,5,5" />
                                <Setter Property="Width" Value="20" />
                                <Setter Property="Height" Value="20" />
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </WrapPanel.Resources>
                        <Button x:Name="SendButton" Width="40" Command="{Binding SendChatMessageCommand}" />
                        <Button x:Name="SurveyButton" Command="{Binding CreateSurveyCommand}"></Button>
                        <Button x:Name="PictureButton"></Button>
                    </WrapPanel>
                </Grid>
            </Grid>
                <WrapPanel Grid.Column="1" Grid.Row="1" x:Name="ThreadsWrapP" Background="{StaticResource DarkBlue1}">

                </WrapPanel>
            </Grid>
        </Grid>
</UserControl>
