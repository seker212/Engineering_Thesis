<UserControl x:Class="ComeX.WPF.UserControls.MessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComeX.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="ContentRow"></RowDefinition>
            <RowDefinition x:Name="FileRow"></RowDefinition>
            <RowDefinition x:Name="EmojisRow" Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ContentText" Grid.Row="0"
                   Text="{Binding Content}"/>
    </Grid>
</UserControl>
